{
  "$ref": "#/definitions/AppConfig",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "AppConfig": {
      "additionalProperties": false,
      "properties": {
        "admin": {
          "default": false,
          "description": "Indicates admin panel is enabled or not.",
          "type": "boolean"
        },
        "auth": {
          "additionalProperties": false,
          "description": "Authentication configuration.",
          "properties": {
            "strategies": {
              "items": {
                "$ref": "#/definitions/AuthStategies"
              },
              "type": "array"
            }
          },
          "required": [
            "strategies"
          ],
          "type": "object"
        }
      },
      "required": [
        "admin",
        "auth"
      ],
      "type": "object"
    },
    "AuthStategies": {
      "enum": [
        "password",
        "google"
      ],
      "type": "string"
    }
  }
}