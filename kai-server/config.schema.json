{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "definitions": {
    "AuthStrategy": {
      "enum": [
        "password",
        "google"
      ],
      "type": "string"
    },
    "Module": {
      "enum": [
        "admin",
        "chat"
      ],
      "type": "string"
    }
  },
  "properties": {
    "$schema": {
      "type": "string"
    },
    "auth": {
      "additionalProperties": false,
      "description": "Authentication configuration.",
      "properties": {
        "remote": {
          "description": "Domain remote auth server for microservice",
          "type": "string"
        },
        "strategies": {
          "default": [
            "google"
          ],
          "description": "Authentication strategies.",
          "items": {
            "$ref": "#/definitions/AuthStrategy"
          },
          "type": "array",
          "uniqueItems": true
        }
      },
      "type": "object"
    },
    "modules": {
      "default": "all modules",
      "description": "Enabled modules",
      "items": {
        "$ref": "#/definitions/Module"
      },
      "type": "array",
      "uniqueItems": true
    }
  },
  "required": [
    "auth"
  ],
  "type": "object"
}