{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "AuthStrategy": {
      "enum": [
        "password",
        "google"
      ],
      "type": "string"
    },
    "Duration": {
      "description": "The duration object. Contains the duration in the units specified by the object.",
      "properties": {
        "days": {
          "description": "The number of days in the duration",
          "type": "number"
        },
        "hours": {
          "description": "The number of hours in the duration",
          "type": "number"
        },
        "minutes": {
          "description": "The number of minutes in the duration",
          "type": "number"
        },
        "months": {
          "description": "The number of months in the duration",
          "type": "number"
        },
        "seconds": {
          "description": "The number of seconds in the duration",
          "type": "number"
        },
        "weeks": {
          "description": "The number of weeks in the duration",
          "type": "number"
        },
        "years": {
          "description": "The number of years in the duration",
          "type": "number"
        }
      },
      "type": "object"
    },
    "Module": {
      "enum": [
        "admin",
        "chat"
      ],
      "type": "string"
    }
  },
  "properties": {
    "auth": {
      "description": "Authentication configuration.",
      "properties": {
        "access_token_duration": {
          "$ref": "#/definitions/Duration",
          "default": {
            "minutes": 10
          },
          "description": "access token duration"
        },
        "refresh_token_duration": {
          "$ref": "#/definitions/Duration",
          "default": {
            "days": 10
          },
          "description": "Refresh token duration"
        },
        "strategies": {
          "default": [
            "google"
          ],
          "description": "Authentication strategies.",
          "items": {
            "$ref": "#/definitions/AuthStrategy"
          },
          "type": "array",
          "uniqueItems": true
        }
      },
      "type": "object"
    },
    "modules": {
      "default": [
        "admin",
        "chat"
      ],
      "description": "Enabled modules",
      "items": {
        "$ref": "#/definitions/Module"
      },
      "type": "array",
      "uniqueItems": true
    }
  },
  "required": [
    "auth"
  ],
  "type": "object"
}