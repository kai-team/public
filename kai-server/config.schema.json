{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "AuthStrategy": {
      "enum": [
        "password",
        "google"
      ],
      "type": "string"
    },
    "Duration": {
      "description": "The duration object. Contains the duration in the units specified by the object.",
      "properties": {
        "days": {
          "description": "The number of days in the duration",
          "type": "number"
        },
        "hours": {
          "description": "The number of hours in the duration",
          "type": "number"
        },
        "minutes": {
          "description": "The number of minutes in the duration",
          "type": "number"
        },
        "months": {
          "description": "The number of months in the duration",
          "type": "number"
        },
        "seconds": {
          "description": "The number of seconds in the duration",
          "type": "number"
        },
        "weeks": {
          "description": "The number of weeks in the duration",
          "type": "number"
        },
        "years": {
          "description": "The number of years in the duration",
          "type": "number"
        }
      },
      "type": "object"
    },
    "LogLevel": {
      "enum": [
        "fatal",
        "error",
        "warn",
        "info",
        "debug",
        "trace",
        "silent"
      ],
      "type": "string"
    },
    "Module": {
      "enum": [
        "admin",
        "auth",
        "user",
        "chat",
        "chat_ws",
        "powersync"
      ],
      "type": "string"
    }
  },
  "properties": {
    "auth": {
      "properties": {
        "access_token_duration": {
          "$ref": "#/definitions/Duration",
          "default": {
            "minutes": 10
          },
          "description": "access token duration"
        },
        "refresh_token_duration": {
          "$ref": "#/definitions/Duration",
          "default": {
            "days": 10
          },
          "description": "Refresh token duration"
        },
        "remote_auth": {
          "description": "Remote auth url use for microservice auth verify to remote server",
          "type": "string"
        },
        "server_name": {
          "default": "kai-server",
          "description": "Server name use for JWT iss",
          "type": "string"
        },
        "strategies": {
          "default": [
            "google"
          ],
          "description": "Authentication strategies.",
          "items": {
            "$ref": "#/definitions/AuthStrategy"
          },
          "type": "array",
          "uniqueItems": true
        }
      },
      "type": "object"
    },
    "logger": {
      "properties": {
        "level": {
          "$ref": "#/definitions/LogLevel",
          "default": "info",
          "description": "Log level"
        },
        "pretty": {
          "default": false,
          "description": "Enable pretty printing (human-readable format) Set to true for development, false for production (JSON output)",
          "type": "boolean"
        },
        "redact": {
          "default": [
            "req.headers.authorization",
            "req.headers.cookie"
          ],
          "description": "Redact sensitive fields from logs",
          "items": {
            "type": "string"
          },
          "type": "array"
        }
      },
      "type": "object"
    },
    "modules": {
      "default": [
        "admin",
        "auth",
        "user",
        "chat",
        "chat_ws"
      ],
      "description": "Enabled modules",
      "items": {
        "$ref": "#/definitions/Module"
      },
      "type": "array",
      "uniqueItems": true
    }
  },
  "required": [
    "auth"
  ],
  "type": "object"
}